@{
    Layout = "~/Views/Shared/_LayoutMin.cshtml";
}
@section estilos {
    <link href="~/css/w3c.css" rel="stylesheet" />
    <style>
        body {
            background-color: black;
            color: white;
        }

        h1 {
            color: red;
        }

        h6 {
            color: red;
            text-decoration: underline;
        }
    </style>
}
<div class="w3-display-middle">
    <h1 class="w3-jumbo w3-animate-top w3-center"><code>Access Denied</code></h1>
    <hr class="w3-border-white w3-animate-left" style="margin:auto;width:50%">
    <h3 class="w3-center w3-animate-right">No tienes permiso para ver @ViewData["ReturnUrl"].</h3>
    <h3 class="w3-center w3-animate-right"><a class="dropdown-item" asp-controller="Home" asp-action="Index">Llevame al inicio</a></h3>
    <h3 class="w3-center w3-animate-zoom">🚫🚫🚫🚫</h3>
    <h6 class="w3-center w3-animate-zoom">error code:403 forbidden</h6>
</div>